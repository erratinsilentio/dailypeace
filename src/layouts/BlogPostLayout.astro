---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/home/Header';
import Footer from '../components/home/Footer';
import "../styles/global.css";
import { ArrowLeft, CircleArrowLeft } from 'lucide-react';
import DateFormat from '@/components/DateFormat';

type Props = CollectionEntry<'blog'>['data'];

const { pathname } = Astro.url;
const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header currentPath={pathname} client:load />
		<main class="pt-[50px] dark:bg-stone-900 min-w-screen mx-24">
			<article class="px-4 md:px-[300px]">
				<div class="hero-image px-12">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose px-24 dark:text-zinc-200">
					<div class="flex flex-col items-center">
						<div class="text-stone-600 mt-4 pb-2 pt-4 text-[16px] dark:text-stone-300">
							<DateFormat date={pubDate} />
						</div>
						<h1><span class="dark:text-white">{title}</span></h1>
						<hr />
                        <div class="flex justify-center mb-8">
                            <div class="h-px w-16 bg-gradient-to-r from-transparent via-purple-300 to-transparent"></div>
                        </div>
					</div>
					<slot />
                    <a href="/articles" class="fixed bottom-4 left-4">
                        <button class="text-stone-800 cursor-pointer dark:text-zinc-300 flex flex-row items-center text-[20px] gap-1"><CircleArrowLeft /> Back</button>
                    </a>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
